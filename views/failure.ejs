<body>
    <!-- Failure Form -->
    <div class="container my-5">
        <div class="position-relative p-5 text-center text-muted bg-body border border-dashed rounded-5">
            <% if (status===500) { %>
            <i class="fa-solid fa-file-circle-exclamation fa-4x"></i>
            <br><br>
            <h1 class="text-body-emphasis">Failed to Connect!</h1>
            <p class="col-lg-6 mx-auto mb-4">
                We are having a problem to connect to our server,<br>
                Sorry for the inconvenience. <br>
                Please try again later. <br>
            </p>
            <% } %>
            <% if (status===409) { %>
            <!-- Duplicate Error -->
            <i class="fa-regular fa-copy fa-4x"></i>
            <br><br>
            <h1 class="text-body-emphasis">Duplicate Found!</h1>
            <p class="col-lg-6 mx-auto mb-4">
                Account with email <b><%= userEmail %>,</b><br>
                is already exists.<br>
                try use a different email. <br>
            </p>
            <% } %>
            <% if (status===422) { %>
            <i class="fa-solid fa-clock-rotate-left fa-4x"></i>
            <br><br>
            <h1 class="text-body-emphasis">Rejoin offer!</h1>
            <p class="col-lg-6 mx-auto mb-4">
                Account with email <b><%= userEmail %></b>,<br>
                has unsubscribed from our service. <br>
                Would you like to rejoin? <br>
            </p>
            <form action="/resub" method="post">
                <input type="hidden" name="userEmail" value="<%= userEmail %>">
                <button type="submit" class="btn btn-success px-5 mb-5"><i class="fa-solid fa-user-pen"></i>
                    Rejoin</button>
            </form>
            <% } %>
            <a href="/" class="btn btn-primary px-5 mb-5">
                <i class="fa-solid fa-arrow-left"></i> Homepage
            </a>
            <p class="col-lg-6 mx-auto mb-4">
                Dasput Newsletter
            </p>
        </div>
    </div>
    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
